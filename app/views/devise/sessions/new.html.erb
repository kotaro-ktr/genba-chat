<div class="box">
  
  <h2>Login</h2>
    
    <!-- Login -->
  <%= form_with model:@user, url: user_session_path, class: 'session', local: true do |f| %>
    <div class="login-form">
      
      <label for="username">Username</label>
      <%= f.email_field :email, class:'input-default', id:'email', placeholder:"E-mail" %>
      
      <label for="password">Password</label>
      <%= f.password_field :password, class:'input-default', id:'password', placeholder:'Password' %>
      
    </div>
    
    <!-- Submit -->
    
    <div class="submit">
      <%= f.submit "ログイン", class:'submit' %>
    </div>
  <% end %>
    
    <!-- Help --> 
    
    <a href="#" class="registe">Register!</a>
    <a href="#" class="forgot-password" title="Forgot password?">Forgot?</a>
    
  </form>
</div>