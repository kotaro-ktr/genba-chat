    
  <div class="register-form">
    <h2>Register</h2>

    <%= form_with model:@user, url: user_registration_path, class: 'registration', local: true do |f| %>
      <div class="form-group">
        <label for="name">Name</label>
          <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例）現場太郎", size: "250x30" %> 
      
        <label for="email">E-mail Adress</label>
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"例）genba@freemail.com" %> 
      
        <label for="password">Password</label>
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"半角英数字で、アルファベットと数字を混ぜて下さい" %> 
      
        <label for="confirm-password">Confirm Password</label>
          <%= f.password_field :password_confirmation, class:"input-default", id:"password_confirmation", placeholder:"パスワードを再入力して下さい" %> 

        <div class="submit">  
          <%= f.submit "新規登録", class:'submit' %>
        </div>
      </div>
    <% end %>
  </div>

